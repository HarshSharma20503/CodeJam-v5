{
  "manifest_version": 3,
  "name": "My React Extension",
  "version": "1.0.0",
  "description": "Chrome Extension with React",
  "action": {
    "default_popup": "index.html"
  },
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "cookies",
    "webRequest",
    "notifications",
    "clipboardWrite",
    "clipboardRead",
    "bookmarks",
    "history",
    "downloads",
    "tabs",
    "webNavigation"
  ],
  "host_permissions": [
    "https://classroom.google.com/c/*",
    "http://*/*",
    "https://*/*",
    "https://drive.google.com/*",
    "https://*.google.com/*",
    "https://*.googleapis.com/*",
    "https://*.usercontent.google.com/*",
    "http://localhost:8000/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://classroom.google.com/c/*"],
      "js": ["content-script.js"]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; connect-src 'self' https://* http://*;"
  }
}
